   @model onlineShop.Models.product   
   
        <div class="center_content">

            <h2>Add New Item</h2>
            <form action="/Admin/addProduct" method="post" enctype="multipart/form-data">

                <table width="500" border="0">
                    <tr>
                    <tr>
                        <th width="153" height="50" scope="row">      <h3>Upload Image</h3></th>
                        <td width="252" height="50"><input type="file" name="productImage" /></td>
                        <td width="81" height="50">&nbsp;</td>
                    </tr>
                    <th width="153" height="50" scope="row">
                        <h3>Product Category</h3>
                    </th>
                    <td width="252" height="50">
                        <select id="category" name="productName">
                            <option value="Laptop">Laptop</option>
                            <option value="WebCam">WebCam</option>
                            <option value="Mobile">Mobile</option>
                        </select>
                    </td>
                    <td width="81" height="50">&nbsp;</td>
                    </tr>
                    <tr>
                        <th width="153" height="50" scope="row">      <h3>Product Company</h3></th>
                        <td width="252" height="50"><input type="text" name="productCompany" id="p_company" /></td>
                        <td width="81" height="50">&nbsp;</td>
                    </tr>
                    <tr>
                        <th width="153" height="50" scope="row">      <h3>Price</h3></th>
                        <td width="252" height="50"><input type="text" name="productPrice" id="p_price" /></td>
                        <td width="81" height="50">&nbsp;</td>
                    </tr>
                    <tr>
                        <th width="153" height="50" scope="row">      <h3>Quantity</h3></th>
                        <td width="252" height="50"><input type="text" name="productQuantity" id="p_quantity" /></td>
                        <td width="81" height="50">&nbsp;</td>
                    </tr>
                    <tr>
                        <th width="153" height="50" scope="row">      <h3>Color</h3></th>
                        <td width="252" height="50"><input type="text" name="productColor" id="p_color" /></td>
                        <td width="81" height="50">&nbsp;</td>
                    </tr>
                    <td><input type="submit" name="addbutton" value="Add Item" /></td>
                    </tr>
                </table>
            </form>
        </div> <!-- end of templatmeo_content -->




   